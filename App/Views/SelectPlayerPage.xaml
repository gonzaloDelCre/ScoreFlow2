<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.SelectPlayerPage"
             xmlns:vm="clr-namespace:App.ViewModels"
             Title="SelectPlayerPage">
    <ContentPage.BindingContext>
        <vm:SelectPlayerViewModel/>
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Players}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding ImageUrl}" WidthRequest="60" HeightRequest="60"/>
                    <StackLayout Grid.Column="1">
                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold"/>
                        <Label Text="{Binding Position}" FontSize="14"/>
                        <Label Text="{Binding Number}" FontSize="14"/>
                    </StackLayout>

                    <Button Text="âœ”" Command="{Binding SelectPlayerCommand}" CommandParameter="{Binding}"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>