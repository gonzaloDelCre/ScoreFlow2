<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.RegisterPage"
             Title="NewPage1">
    <ScrollView Padding="0, 20, 0, 20">
        <StackLayout Padding="30" Spacing="15" VerticalOptions="FillAndExpand">
            <!-- Título -->
            <Label Text="Crear cuenta"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333333"
                   VerticalOptions="Start" />

            <!-- Campo de nombre -->
            <Entry x:Name="NameEntry"
                   Placeholder="Nombre completo"
                   FontSize="18"
                   TextColor="#333333"
                   Keyboard="Text"
                   BackgroundColor="White"
                   HeightRequest="50" 
                   Text="{Binding FullName}" />

            <!-- Campo de correo -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Correo electrónico"
                   FontSize="18"
                   TextColor="#333333"
                   Keyboard="Email"
                   BackgroundColor="White"
                   HeightRequest="50"
                   Text="{Binding Email}" />

            <!-- Campo de contraseña -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   FontSize="18"
                   TextColor="#333333"
                   BackgroundColor="White"
                   HeightRequest="50"
                   Text="{Binding Password}" />

            <!-- Botón de Registro -->
            <Button Text="Crear cuenta"
                    BackgroundColor="#3B9E9D"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="15"
                    FontSize="18"
                    HeightRequest="50"
                    Command="{Binding RegisterCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>