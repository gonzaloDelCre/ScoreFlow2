<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.JoinPage"
             Title="JoinPage">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20">

        <!-- Barra de navegación superior -->
        <Grid RowDefinitions="Auto" Padding="10,20,10,10">
            <Grid ColumnDefinitions="Auto, * ,Auto">
                <Image Source="menu_icon.png" HeightRequest="25" Grid.Column="0"/>
                <Label Text="Usuario" FontSize="20" FontAttributes="Bold" 
                       HorizontalOptions="Center" Grid.Column="1"/>
                <Image Source="bell_icon.png" HeightRequest="25" Grid.Column="2"/>
            </Grid>
        </Grid>

        <!-- Contenedor centrado -->
        <Grid RowDefinitions="*,Auto,*" Grid.Row="1">
            <Frame BackgroundColor="#F5F5F5" Padding="30" CornerRadius="15" WidthRequest="320"
                   VerticalOptions="Center" Grid.Row="1">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Image Source="group_icon.png" HeightRequest="100"/>
                    <Label Text="Únete a un equipo mediante un enlace de invitación"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           TextColor="Black"
                           Margin="0,10,0,10"/>
                    <Entry Placeholder="Código de invitación"
                           BackgroundColor="White"
                           WidthRequest="220"
                           HeightRequest="40"/>
                    <Button Text="Confirmar"
                            BackgroundColor="Black"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="10"
                            WidthRequest="140"
                            HeightRequest="45"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Botón "Crear un equipo" -->
        <Frame BackgroundColor="White" Padding="15" CornerRadius="15" WidthRequest="320"
               BorderColor="Gray" HasShadow="True" Grid.Row="2">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Image Source="shield_icon.png" HeightRequest="30" Grid.Column="0"/>
                <Label Text="Crear un equipo" FontSize="18" VerticalOptions="Center"
                       Grid.Column="1" TextColor="Black"/>
                <Image Source="arrow_icon.png" HeightRequest="25" Grid.Column="2"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>